<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialog.CryptFragment"
    android:paddingBottom="50dp">


    <TextView
        android:id="@+id/plain_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plaint_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/crypt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plaint_text"
        app:layout_constraintTop_toBottomOf="@+id/plain_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/decrypt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plaint_text"
        app:layout_constraintTop_toBottomOf="@+id/crypt_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>